{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "jest": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "linebreak-style": ["error", "windows"],
    "consistent-return": ["error", { "treatUndefinedAsUnspecified": true }],
    "radix": ["error", "always"]
  }
}
